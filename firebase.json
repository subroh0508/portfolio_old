{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "buildSrc/**",
      "gradle/**",
      "src/**",
      "**/*.@(kt|kts|properties|bat)",
      "gradlew"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
